<%- include('partials/header', { title: "Menu" }) %>

<h1>Our Pizzas</h1>

<div class="grid">
  <% products.forEach(p => { %>
    <article class="card">
      <div class="thumb">
        <img src="/images/<%= p.image %>" alt="<%= p.name %>" />
      </div>
      <h3><%= p.name %></h3>
    </article>
  <% }) %>
</div>

<%- include('partials/footer') %>